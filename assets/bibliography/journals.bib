  journal = {Proc. Natl. Acad. Sci. U.S.A.},
  author = {Dalvi, Siddhesh and Gujrati, Abhijeet and Khanal, Subarna R. and Pastewka, Lars and Dhinojwala, Ali and Jacobs, Tevis D. B.},
  year = {2019},
