@article{greiner46,
  author = {Greiner, A. and Reggiani, L. and Kuhn, T. and Varani, L.},
  title = {A universal thermal conductance of charge carriers},
  journal = {Il Nuovo Cimento D},
  year = {1996},
  volume = {18},
  number = {12},
  pages = {1471-1473},
  doi = {10.1007/bf02453789},
