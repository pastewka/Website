  keywords = {Condensed Matter - Materials Science},
  pages = {023602},
  annote = {Comment: 9 pages, 5 figures, 3 tables, to be submitted to Phys. Rev. Mater. Journal},
  file = {Full Text PDF:/home/pastewka/snap/zotero-snap/common/Zotero/storage/AVHZK8E7/Khosrownejad et al. - 2021 - Quantitative prediction of the fracture toughness .pdf:application/pdf;APS Snapshot:/home/pastewka/snap/zotero-snap/common/Zotero/storage/9WPAGJ9P/PhysRevMaterials.5.html:text/html},
  pdf = {http://harvest.aps.org/v2/journals/articles/10.1103/PhysRevMaterials.5.023602/fulltext}
