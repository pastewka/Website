  pages = {981-988},
  title = {Molecular dynamics simulation of gold solid film lubrication},
  url = {http://www.ijmr.de/directlink.asp?MK110365},
  volume = {101},
  year = {2010},
  bdsk-url-1 = {http://www.ijmr.de/directlink.asp?MK110365},
  bdsk-url-2 = {10.3139/146.110365},
  pdf = {https://www.degruyter.com/document/doi/10.3139/146.110365/pdf}
