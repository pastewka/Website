  issn = {1364-503X},
  journal = {Phil. Trans. R. Soc. A},
  number = {1944},
  pages = {2320-2328},
  title = {Smoothed particle hydrodynamics simulation of shear-induced powder migration in injection moulding},
  url = {http://dx.doi.org/10.1098/rsta.2011.0043},
